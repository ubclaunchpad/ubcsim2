{
  "name": "ubcsim2",
  "version": "1.0.0",
  "description": "A 'choose your own adventure' style browser game where the player attempts to survive a year as a student at UBC.",
  "homepage": "https://ubclaunchpad.github.io/ubcsim2",
  "main": "index.js",
  "scripts": {
    "test": "mocha -r ts-node/register test/**",
    "lint": "tslint --project tsconfig.json",
    "compile": "tsc",
    "start": "parcel serve public/index.html",
    "watch": "parcel watch public/index.html",
    "build": "cross-env NODE_ENV=production parcel build public/index.html --public-url .",
    "deploy": "gh-pages -d dist"
  },
  "author": "UBC Launch Pad",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "mocha": "^6.2.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4",
    "cross-env": "^6.0.3",
    "gh-pages": "^2.1.1",
    "parcel-bundler": "^1.12.4",
    "tslint": "^5.20.0"
  },
  "dependencies": {}
}
